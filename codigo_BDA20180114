WHERE unix_timestamp(fact.fc_pago,'yyy-MM-dd') >= unix_timestamp('2016-09-01','yyyy-MM-dd') 
AND unix_timestamp(fact.fc_pago,'yyy-MM-dd') <= unix_timestamp('2017-01-01','yyyy-MM-dd');



